<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tienle.webbipos.Activity.ThongtintaikhoanActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_android"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<LinearLayout
    android:id="@+id/linelayout1"
   android:layout_below="@+id/imageView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Tên tài khoản"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Tên người dùng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_gmail"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#c9120f"
        android:text="abc@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="email" />
</LinearLayout>
    <LinearLayout

        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:gravity="center_horizontal"
           android:layout_weight="1"
           android:text="Quyền truy cập"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold" />
        <ImageView
            android:background="@drawable/ic_expand_more_down"
            android:layout_weight="1"
            android:layout_width="30sp"
            android:layout_height="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu thay đổi"
        android:id="@+id/btn_luuthaydoi"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true" />


</RelativeLayout>
