<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#619b4c"

    android:orientation="vertical"
    android:paddingBottom="40dp"
   android:paddingLeft="20dp"

    android:paddingRight="20dp"

    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/icon_contact_mail_black_48dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_tentaikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:hint="Tên tài khoản"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="12sp" />

        <EditText

            android:id="@+id/edt_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt_tentaikhoan"
            android:layout_marginTop="10dp"
            android:hint="Mật khẩu"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"

            android:textSize="12sp"
            android:password="true" />

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_matkhau"
            android:layout_marginTop="15dp"
            android:text="ĐĂNG NHẬP"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/txt_forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:text="Quên mật khẩu?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="10dp" />

        <TextView
android:gravity="center_horizontal"
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_forgetpass"

            android:text="Tạo tài khoản IPhủi"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>
